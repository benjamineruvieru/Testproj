{
	"compilerOptions": {
		"typeRoots": ["node_modules/@types"],
	  "allowJs": true,
	  "allowSyntheticDefaultImports": true,
	  "esModuleInterop": true,
	  "isolatedModules": true,
	  "jsx": "react-native",
	  "lib": ["es2017"],
	  "moduleResolution": "node",
	  "noEmit": true,
	  "strict": true,
	  "target": "esnext",
	  "baseUrl": ".",
	       "paths": {
	        "*": ["source/*"],
	        "tests": ["tests/*"],
	        "@components/*": ["source/components/*"],
	      },
	},
	"exclude": [
	  "node_modules",
	  "babel.config.js",
	  "metro.config.js",
	  "jest.config.js"
	]
      }
